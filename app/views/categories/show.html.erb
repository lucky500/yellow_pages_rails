<h1><%= @category.name %></h1>

<% if @category.businesses.any? %>
  <h4>Here are the businesses for this category:</h4>

  <ul>
    <% @category.businesses.each do |business| %>
      <li>
        <%= business.name %>
        <%= business.website %>
        <%= business.phone_number %>
      </li>
      <%= link_to 'Edit', edit_category_business_path(@category, business) %> |
      <%= link_to 'Delete', category_business_path(@category, business),
                            :data => {:confirm => 'Are you Sure',
                              :method => 'delete'} %>
    <% end %>
  </ul>
<% else %>
  <p>There are no businesses in this category yet.</p>
<% end %>

<p><%= link_to "Add a Business", new_category_business_path(@category) %></p>
<p>
  <%= link_to "Edit",  edit_category_path(@category) %>
</p>
<p>
  <%= link_to "Delete Category", category_path(@category),
                        :data => {:confirm => 'You sure?',
                        :method => 'delete'} %>
</p>

<p><%= link_to 'Return to Categories', categories_path %></p>
